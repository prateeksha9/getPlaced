      /> -->
      <h2><%= student.name%></h2>
     
    </div>
    <div class="form-input">
      <input
        type="text"
        name="email"
        placeholder="email: <%= student.email %>"
        required
      />
    </div>
    <!-- <div class="form-input">
      <select class="form-input" name="status">
